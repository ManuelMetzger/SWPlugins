{
  "name": "AlternatingColorCart",
  "author": "Manuel Metzger",
  "views": ["@Storefront", "@Plugins", "@AlternatingColorCart"],
  "style": [
    "app/storefront/src/scss/overrides.scss",
    "@Storefront",
    "app/storefront/src/scss/base.scss"
  ],
  "script": [
    "@Storefront",
    "app/storefront/dist/storefront/js/alternating-color-cart.js"
  ],
  "asset": ["@Storefront", "app/storefront/src/assets"],
  "config": {
    "blocks": {
      "pluginSettings": {
        "label": {
          "en-GB": "Plugin Settings",
          "de-DE": "Plugin-Einstellungen"
        }
      }
    },
    "sections": {
      "overwrittenVariables": {
        "label": {
          "en-GB": "Overwritten Style Variables",
          "de-DE": "Überschriebene Darstellungs-Variablen"
        }
      },
      "newVariables": {
        "label": {
          "en-GB": "New Style Variables",
          "de-DE": "Neue Darstellungs-Variablen"
        }
      },
      "functionalVariables": {
        "label": {
          "en-GB": "Functional Variables",
          "de-DE": "Funktions-Variablen"
        }
      }
    },
    "fields": {
      "btnColorAddToCart": {
        "label": {
          "en-GB": "Button color on add",
          "de-DE": "Knopffarbe bei Hinzufügen"
        },
        "type": "color",
        "block": "pluginSettings",
        "section": "newVariables",
        "value": "#595959"
      },
      "btnColorTimerOver": {
        "label": {
          "en-GB": "Button color on timer over",
          "de-DE": "Knopffarbe bei Ablauf des Timers"
        },
        "type": "color",
        "block": "pluginSettings",
        "section": "newVariables",
        "value": "#068490"
      },
      "sw-font-family-base": {
        "label": {
          "en-GB": "Base font family",
          "de-DE": "Basis-Schriftart"
        },
        "type": "text",
        "block": "pluginSettings",
        "section": "overwrittenVariables",
        "value": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif"
      },
      "sw-font-family-headline": {
        "label": {
          "en-GB": "Headline font family",
          "de-DE": "Schriftart für Überschriften"
        },
        "type": "text",
        "block": "pluginSettings",
        "section": "overwrittenVariables",
        "value": "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif"
      },
      "timeOutMillisec": {
        "label": {
          "en-GB": "Timeout for color change",
          "de-DE": "Dauer des Farbwechsels"
        },
        "type": "int",
        "block": "pluginSettings",
        "section": "functionalVariables",
        "value": 1000
      }
    }
  }
}
